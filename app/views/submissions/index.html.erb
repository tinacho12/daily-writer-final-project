<div>
  <div>
    <h1>
      My submissions
    </h1>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Word count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_submissions.each do |a_submission| %>
      <tr>
        <td>
          <%= a_submission.id %>
        </td>

        <td>
          <%= a_submission.body %>
        </td>

        <td>
          <%= a_submission.word_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_submission.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_submission.updated_at) %> ago
        </td>

        <td>
          <a href="/submissions/<%= a_submission.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
